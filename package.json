{
  "name": "slashpay",
  "version": "0.0.1",
  "description": "Slashpay is a method for abstracting and automating any payment process behind a single, static pubkey (\"slashtag\") which refers to a data store containing all supported payment endpoints. ",
  "main": "index.js",
  "types": "types/",
  "scripts": {
    "lint": "standard --fix",
    "test": "brittle test/**/*.test.js --coverage --bail",
    "types": "node_modules/typescript/bin/tsc src/**/*.js --declaration --allowJs --emitDeclarationOnly --outDir types --target es2015"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashtags/slashpay-solo.git"
  },
  "keywords": [
    "slashpay",
    "slashtag"
  ],
  "author": "dzdidi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/slashtags/slashpay-solo/issues"
  },
  "homepage": "https://github.com/slashtags/slashpay-solo#readme",
  "devDependencies": {
    "brittle": "^3.2.1",
    "proxyquire": "^2.1.3",
    "sinon": "^15.0.3",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@synonymdev/slashtags-url": "^1.0.0-alpha.3",
    "@synonymdev/web-relay": "github:slashtags/web-relay",
    "b4a": "^1.6.4",
    "qrcode-terminal": "^0.12.0",
    "slashtags-logger": "github:slashtags/slashtags-logger",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  }
}
